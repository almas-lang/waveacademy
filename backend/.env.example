# Database (Railway)
DATABASE_URL=postgresql://postgres:password@host:5432/railway

# Authentication
JWT_SECRET=generate-a-64-character-random-string

# Admin credentials (REQUIRED for seeding - no defaults)
ADMIN_EMAIL=
ADMIN_PASSWORD=

# Server
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# Cloudflare R2 Storage
R2_ACCOUNT_ID=your-cloudflare-account-id
R2_ACCESS_KEY_ID=your-r2-access-key
R2_SECRET_ACCESS_KEY=your-r2-secret-key
R2_BUCKET_NAME=xperiencewave-lms
R2_PUBLIC_URL=https://pub-xxxx.r2.dev

# Bunny.net Video Streaming
BUNNY_LIBRARY_ID=592270
BUNNY_STREAM_API_KEY=your-bunny-api-key
BUNNY_TOKEN_AUTH_KEY=your-bunny-token-key
BUNNY_CDN_HOSTNAME=vz-xxxxx.b-cdn.net

# Resend Email
RESEND_API_KEY=re_xxxxxxxxxxxx
EMAIL_FROM=noreply@xperiencewave.com

# Optional: Seed sample data
SEED_SAMPLE_DATA=false
